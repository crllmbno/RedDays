<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homee"
    android:background="@color/bgColor">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/applogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo"/>

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="72dp"
                android:layout_height="16dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/jostbold"
                android:text="PeriodCheck"
                android:textAlignment="center"
                android:textColor="@color/Mint"
                android:textSize="10sp" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/shape1"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/dash"
            android:orientation="vertical">

            <TextView
                android:id="@+id/periodIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/interlight"
                android:text="Period in"
                android:textColor="#A85D5D"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/periodDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/interblack"
                android:text="2 Days"
                android:textSize="35sp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/cycleReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:fontFamily="@font/interlight"
                android:text="Low chance of getting pregnant"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/log"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/interregular"
                android:text="Log period"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:layout_weight="1"
        android:background="@drawable/mint_bg"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/dailyInsights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/jostbold"
            android:text="Daily insights"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:background="@drawable/linear"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cycleDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/interregular"
                    android:text="26th"
                    android:textSize="40sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/cycleDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/interregular"
                    android:text="Cycle day"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@drawable/linear"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/ovulation"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/interregular"
                    android:text="Ovulation in 12 days"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</ScrollView>

</FrameLayout>
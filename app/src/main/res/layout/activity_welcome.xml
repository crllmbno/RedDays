<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome"
    android:background="@color/bgColor">

    <ImageView
        android:id="@+id/imgwc"
        android:layout_width="451dp"
        android:layout_height="524dp"
        android:src="@drawable/imgwc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTake"
        android:layout_width="400dp"
        android:layout_height="87dp"
        android:fontFamily="@font/jostbold"
        android:text="Take Control of
                          Your Cycle"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <TextView
        android:id="@+id/txtStay"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:fontFamily="@font/interlight"
        android:text="Stay in tune with your body and effortlessly track your menstrual cycle."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTake"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStay"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/next" />


</androidx.constraintlayout.widget.ConstraintLayout>